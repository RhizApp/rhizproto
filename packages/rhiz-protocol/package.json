{
  "name": "@atproto/rhiz-protocol",
  "version": "0.1.0",
  "description": "Rhiz Protocol core schemas and types",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.mjs",
      "require": "./dist/schema.js"
    }
  },
  "files": [
    "dist",
    "schemas"
  ],
  "scripts": {
    "codegen": "echo 'y' | node ../lex-cli/dist/index.js gen-api ./src/generated ../../lexicons/net/rhiz/**/*.json",
    "build": "pnpm run codegen && tsup",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist src/generated"
  },
  "dependencies": {
    "@atproto/api": "workspace:*",
    "@atproto/common": "workspace:*",
    "@atproto/crypto": "workspace:*",
    "@atproto/lexicon": "workspace:*",
    "@atproto/syntax": "workspace:*",
    "@atproto-labs/did-resolver": "workspace:*",
    "@atproto-labs/handle-resolver-node": "workspace:*",
    "@atproto-labs/identity-resolver": "workspace:*",
    "zod": "^3.22.4",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@atproto/lex-cli": "workspace:*",
    "@types/node": "^20.10.6",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "eslint": "^8.56.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

